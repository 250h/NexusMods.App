<reactiveUi:ReactiveUserControl
    d:DesignHeight="240"
    d:DesignWidth="200"
    mc:Ignorable="d"
    x:Class="NexusMods.App.UI.Controls.GameWidget.GameWidget"
    x:TypeArguments="gameWidget:IGameWidgetViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gameWidget="clr-namespace:NexusMods.App.UI.Controls.GameWidget"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resources="clr-namespace:NexusMods.App.UI.Resources"
    xmlns:icons="clr-namespace:NexusMods.Icons;assembly=NexusMods.Icons"
    xmlns:progressRing="clr-namespace:NexusMods.App.UI.Controls.ProgressRing">

    <Design.DataContext>
        <gameWidget:GameWidgetDesignViewModel />
    </Design.DataContext>

    <Border
        Height="228"
        Width="180"
        x:Name="DropShadow1Border">
        <Border x:Name="MainBorder"
            Height="228"
            Width="180">
            <Grid RowDefinitions="106, *">
                <Image
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Height="228"
                    Stretch="UniformToFill"
                    Width="180"
                    x:Name="BlurryImage" />
                <Image
                    Grid.Row="0"
                    Width="180"
                    x:Name="GameImage" />
                <Border Grid.Row="1">
                    <Grid RowDefinitions="Auto, 1,  *"
                          Margin="16,0,16,0"
                          VerticalAlignment="Top"
                          Width="148">
                        <TextBlock
                            Grid.Row="0"
                            Height="34"
                            Margin="0,8"
                            VerticalAlignment="Center"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="Wrap"
                            x:Name="NameTextBlock" />
                        <Border
                            BorderThickness="0,0,0,1"
                            Grid.Row="1"
                            Margin="0"
                            x:Name="SeparationLine"/>
                        
                        <!-- Add game -->
                        <StackPanel x:Name="AddGameStackPanel"
                            Grid.Row="2"
                            Margin="0,16,0,0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            IsVisible="False">
                            <Button Classes="Rounded Primary" x:Name="AddGameButton">
                                <StackPanel Orientation="Horizontal">
                                    <icons:UnifiedIcon Size="20" Classes="AddCircle" />
                                    <TextBlock Classes="BodyMDNormal" 
                                               Text="{x:Static resources:Language.GameWidget__Add_game}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <!-- Adding game spinner -->
                        <StackPanel x:Name="AddingGameSpinnerStackPanel"
                            Grid.Row="2"
                            Margin="0,16,0,0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Classes="Spacing-1"
                            IsVisible="False">
                            <progressRing:ProgressRing Height="24" Width="24"
                                                       VerticalAlignment="Center"/>
                            <TextBlock Classes="BodyMDNormal" 
                                       VerticalAlignment="Center"
                                       Text="{x:Static resources:Language.GameWidget__Adding_game}"/>
                        </StackPanel>
                        
                        <StackPanel x:Name="ViewGameStackPanel"
                                    Grid.Row="2"
                                    Margin="0,16,0,0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    IsVisible="True">
                            <StackPanel Orientation="Horizontal"
                                        Classes="Spacing-2">
                                <Button Classes="Rounded Primary" x:Name="ViewGameButton">
                                    <StackPanel Orientation="Horizontal">
                                        <icons:UnifiedIcon Size="20" Classes="Check" />
                                        <TextBlock Classes="BodyMDNormal" 
                                                   Text="{x:Static resources:Language.GameWidget__View}"/>
                                    </StackPanel>
                                </Button>
                                <Button Classes="Rounded Primary" x:Name="AddLoadoutButton">
                                        <icons:UnifiedIcon Classes="AddCircle" />
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        
                        
                        
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</reactiveUi:ReactiveUserControl>
