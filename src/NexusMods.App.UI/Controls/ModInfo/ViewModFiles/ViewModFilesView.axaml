<reactiveUi:ReactiveUserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="NexusMods.App.UI.Controls.ModInfo.ViewModFiles.ViewModFilesView"
    x:TypeArguments="viewModFiles:IViewModFilesViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModFiles="clr-namespace:NexusMods.App.UI.Controls.ModInfo.ViewModFiles">
    <Design.DataContext>
        <!-- This ViewModel has a bool switch 'showMultipleRoots' to toggle a view which also has Saves -->
        <viewModFiles:ViewModFilesDesignViewModel />
    </Design.DataContext>
    <TreeDataGrid Classes="TreeWhiteCaret"
                  ShowColumnHeaders="True"
                  x:Name="ModFilesTreeDataGrid" />
</reactiveUi:ReactiveUserControl>

