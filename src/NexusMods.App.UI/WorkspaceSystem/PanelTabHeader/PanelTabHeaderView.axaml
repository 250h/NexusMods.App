<reactive:ReactiveUserControl
    x:TypeArguments="workspace:IPanelTabHeaderViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactive="http://reactiveui.net"
    xmlns:workspace="clr-namespace:NexusMods.App.UI.WorkspaceSystem"
    mc:Ignorable="d" d:DesignWidth="232" d:DesignHeight="52"
    x:Class="NexusMods.App.UI.WorkspaceSystem.PanelTabHeaderView">

    <Design.DataContext>
        <workspace:PanelTabHeaderDesignViewModel />
    </Design.DataContext>

    <Border x:Name="Container" Classes="RoundedTop">

        <StackPanel Orientation="Horizontal"
                    Spacing="12"
                    Height="52"
                    Margin="24, 14, 24, 14">
            <StackPanel Orientation="Horizontal"
                        Spacing="6"
                        VerticalAlignment="Center">
                <Image x:Name="IconImage"
                       MaxHeight="24"
                       MaxWidth="24"
                       Height="100"
                       Width="100" />
                <TextBlock x:Name="TitleTextBlock"
                           Classes="BodyLGBold"
                           Width="114"
                           TextWrapping="NoWrap"
                           VerticalAlignment="Bottom"
                           TextTrimming="CharacterEllipsis" />
            </StackPanel>

            <Button x:Name="CloseTabButton"
                    Classes="PanelTitlebar Close"/>

        </StackPanel>
    </Border>

</reactive:ReactiveUserControl>
