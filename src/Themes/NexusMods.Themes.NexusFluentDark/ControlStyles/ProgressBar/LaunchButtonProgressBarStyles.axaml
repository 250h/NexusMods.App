<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <StackPanel Width="200" Spacing="8" Margin="8">
            <ProgressBar Classes="LaunchButton" Minimum="0" Maximum="1" ProgressTextFormat="WAITING"></ProgressBar>
            <ProgressBar Classes="LaunchButton" Minimum="0" Maximum="1" Value="0.75" ProgressTextFormat="PROCESSING..."></ProgressBar>
            <ProgressBar Classes="LaunchButton" Minimum="0" Maximum="1" IsIndeterminate="True" ProgressTextFormat="RUNNING..."></ProgressBar>
        </StackPanel>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="ProgressBar.LaunchButton">
        <Setter Property="ShowProgressText" Value="True"/>
        <Setter Property="Height" Value="34"/>
        <Setter Property="Foreground" Value="{StaticResource ElementForegroundPrimaryModerateBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource ElementForegroundPrimaryModerateBrush}"/>
        <Setter Property="MinWidth" Value="100"/>

        <Style Selector="^ TextBlock">
            <Setter Property="Theme" Value="{StaticResource ButtonMontserratSemiTheme}"/>
        </Style>
    </Style>

</Styles>

