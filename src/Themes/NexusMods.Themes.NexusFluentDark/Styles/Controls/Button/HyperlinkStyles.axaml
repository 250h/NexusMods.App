<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Orientation="Vertical">
                <Button Classes="Hyperlink Primary" IsEnabled="True">
                    <TextBlock Classes="BodyMdNormal" Text="More info about this text"  />
                </Button>
                <Button Classes="Hyperlink Primary" IsEnabled="False">
                    <TextBlock Classes="BodyMdNormal" Text="More info about this text"  />
                </Button>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- Style Definitions -->
    <Style Selector="Button.Hyperlink">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="{StaticResource ElementBackgroundTransparentBrush}" />

        <Style Selector="^ TextBlock">
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style Selector="^:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{StaticResource ElementBackgroundTransparentBrush}" />
        </Style>

        <Style Selector="^:pressed">
            <Setter Property="RenderTransform" Value="scale(1)" />
            <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Background" Value="{StaticResource ElementBackgroundTransparentBrush}" />
            </Style>
        </Style>

        <Style Selector="^:disabled">
            <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Background" Value="{StaticResource ElementBackgroundTransparentBrush}" />
            </Style>
        </Style>

    </Style>

    <!-- Style Definitions -->
    <Style Selector="Button.Hyperlink.Primary">
        <Setter Property="Foreground" Value="{StaticResource ElementForegroundPrimaryModerateBrush}" />

        <Style Selector="^:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Foreground" Value="{StaticResource ElementForegroundPrimaryWeakBrush}" />
        </Style>

        <Style Selector="^:pointerover > TextBlock">
            <Setter Property="TextDecorations" Value="Underline" />
        </Style>

        <Style Selector="^:pressed">
            <Setter Property="RenderTransform" Value="scale(1)" />
            <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Foreground" Value="{StaticResource ElementForegroundPrimaryStrongBrush}" />
            </Style>
        </Style>
    </Style>


</Styles>
