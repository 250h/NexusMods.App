<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StyleInclude Source="ComboBox.AddPanelDropDown.axaml"/>
    <StyleInclude Source="ComboBox.Primary.axaml"/>
    <StyleInclude Source="ComboBox.Secondary.axaml"/>
    <StyleInclude Source="ComboBox.Tertiary.axaml"/>

    <Style Selector="ComboBox">
        <Style Selector="^ /template/ ContentControl#ContentPresenter">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource FontBodyRegular}"/>
        </Style>

        <Style Selector="^ /template/ TextBlock#PlaceholderTextBlock">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource FontBodyRegular}"/>
            <Setter Property="LineHeight" Value="20"/>
        </Style>

        <Style Selector="^ /template/ PathIcon#DropDownGlyph">
            <Setter Property="Data" Value="{StaticResource KeyBoardArrowDownGeometry}" />
            <Setter Property="Height" Value="12" />
            <Setter Property="Width" Value="12" />
        </Style>

    </Style>

</Styles>

